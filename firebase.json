{
  "hosting": [
    {
      "target": "user-portal",
      "public": "frontend/user-portal/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "destination": "https://subscription-api-REPLACE_WITH_CLOUD_RUN_URL.run.app"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "admin-portal", 
      "public": "frontend/admin-portal/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "destination": "https://subscription-api-REPLACE_WITH_CLOUD_RUN_URL.run.app"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}