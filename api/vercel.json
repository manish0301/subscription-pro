{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key",
    "JWT_SECRET": "@jwt_secret",
    "RAZORPAY_KEY_ID": "@razorpay_key_id",
    "RAZORPAY_KEY_SECRET": "@razorpay_key_secret",
    "CORS_ORIGINS": "@cors_origins",
    "RATE_LIMIT_ENABLED": "true"
  },
  "functions": {
    "index.py": {
      "maxDuration": 30
    }
  }
}
